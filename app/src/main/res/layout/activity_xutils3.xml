<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lin.xutils3.annotation.Xutils3Activity">

    <include layout="@layout/titlebar"></include>

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_annotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="xUtils3注解模块"
        android:textSize="14sp" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="xUtils3注解联网模块"
        android:textSize="14sp" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="xUtils3加载单张图片"
        android:textSize="14sp" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_image_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="xUtils3加载列表图片"
        android:textSize="14sp" />


</LinearLayout>
