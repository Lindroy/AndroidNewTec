<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lin.okhttp.OKHttpActivity">

    <include layout="@layout/titlebar">

    </include>

    <Button
        android:id="@+id/btn_get"
        style="@style/MyButton"
        android:text="Get请求" />

    <Button
        android:id="@+id/btn_post"
        style="@style/MyButton"
        android:text="Post请求" />

    <Button
        android:id="@+id/btn_get_okHttpUtils"
        style="@style/MyButton"
        android:text="使用OKHttpUtils进行Get请求" />

    <Button
        android:id="@+id/btn_post_okHttpUtils"
        style="@style/MyButton"
        android:text="使用OKHttpUtils进行Post请求" />

    <Button
        android:id="@+id/btn_download"
        style="@style/MyButton"
        android:text="使用OKHttpUtils下载大文件" />

    <Button
        android:id="@+id/btn_upload"
        style="@style/MyButton"
        android:text="使用OKHttpUtils上传文件" />

    <Button
        android:id="@+id/btn_image"
        style="@style/MyButton"
        android:text="使用OKHttpUtils请求单张图片" />

    <Button
        android:id="@+id/btn_image_list"
        style="@style/MyButton"
        android:text="使用OKHttpUtils在列表中请求图片" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示请求的数据" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivOKHttp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
