<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lin.MainActivity">

    <include layout="@layout/titlebar"></include>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:background="#f5f5f5"
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:checked="true"
            android:id="@+id/rb_common_frame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_common_frame_drawable_selector"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="常用框架"
            android:textColor="@drawable/rb_video_textcolor_selector" />

        <RadioButton
            android:id="@+id/rb_thirdParty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_thirdparty_drawable_selector"
            android:gravity="center"
            android:padding="0dp"
            android:text="第三方"
            android:textColor="@drawable/rb_video_textcolor_selector" />

        <RadioButton
            android:id="@+id/rb_custom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_custom_drawable_selector"
            android:gravity="center"
            android:padding="0dp"
            android:text="自定义控件"
            android:textColor="@drawable/rb_video_textcolor_selector" />

        <RadioButton
            android:id="@+id/rb_other"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_other_drawable_selector"
            android:gravity="center"
            android:padding="0dp"
            android:text="其他"
            android:textColor="@drawable/rb_video_textcolor_selector" />
    </RadioGroup>

</LinearLayout>
